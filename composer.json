{
    "name": "phpcl/laminas-tools",
    "type": "library",
    "description": "Create modules, controllers and factories for Laminas/ZF3 projects",
    "keywords": ["phpcl","laminas","zf","zf3","zend framework"],
    "homepage": "https://github.com/phpcl/laminas_tools",
    "license": "MIT",
    "authors": [
        {
            "name": "Doug Bierer",
            "email": "doug.bierer@etista.com",
            "homepage": "https://php-cl.com/",
            "role": "CTO"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "Phpcl\\LaminasTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpcl\\LaminasTools\\": "src"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Phpcl\\LaminasTools\\InstallFollowup::postInstall"
        ],
        "post-update-cmd": [
            "Phpcl\\LaminasTools\\InstallFollowup::postUpdate"
        ],
        "post-package-install": [
            "Phpcl\\LaminasTools\\InstallFollowup::postPackageInstall"
        ],
        "post-package-update": [
            "Phpcl\\LaminasTools\\InstallFollowup::postPackageUpdate"
        ]
    }
}
